{% extends 'base.jinja2' %}
{% block content %}
<a href="{{ url_for('create')}}"> Create a new post</a>
<h1>Welcome to your blog.</h1>
<h2>Posts</h2>
<ul>
    {% for id, post in posts.items() %}
        <li><a href="{{ url_for('post', post_id=id) }}">{{ post['Title'] }}</a></li>
    {% endfor %}
</ul>
{% endblock %}